<?php if ($this->pageCount): ?>
    <div>
        <ul class="pagination">
            <!-- Previous page link -->
            <?php if (isset($this->previous)): ?>
                <li>
                    <a href="<?php echo $this->url($this->route, array('controller' => $this->controller, 'action' => $this->action, 'id' => $this->id, 'page' => $this->previous)) ?>">
