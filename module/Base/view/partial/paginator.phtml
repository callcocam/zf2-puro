<?php if ($this->pageCount): ?>
    <select id="paginationControl" size="1">
        <?php foreach ($this->pagesInRange as $page): ?>
            <?php $selected = ($page == $this->current) ? ' selected="selected"' : ''; ?>
            <option value="<?= $this->url($this->route, array('controller' => $this->controller, 'action' => $this->action, 'id' => $this->id, 'page' => $page)); ?>"<?= $selected ?>>
                <?= $page; ?>
            </option>
        <?php endforeach; ?>
    </select>
