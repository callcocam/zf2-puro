            <?php foreach ($this->pagesInRange as $page): ?>
                <?php if ($page != $this->current): ?>
                    <li>
                        <a href="<?php echo $this->url($this->route, array('controller' => $this->controller, 'action' => $this->action, 'id' => $this->id, 'page' => $page)); ?>">
